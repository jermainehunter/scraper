<nav class="navbar navbar-expand-lg fixed-top text-light navbar-light" style="background-color: #222222;">
    <div class="container">

        <img src="http://www.radiofreeskaro.com/wp-content/uploads/2011/06/BBC+Logo.jpg" width="100px" height="48px">


        <h1>BBC Scraper</h1>


        <button id="scraper-button" type="button" class="btn btn-info">Scrape New Articles</button>
        <button id="clear-button" type="button" class="btn btn-danger">Clear Articles</button>

    </div>
</nav>
<div class="main-pad">
    <div class="container">
        {{#each articles}}
        <hr>
        <h3 class="art-title">{{title}}</h3>
        <a href="https://www.bbc.co.uk{{link}}" target="_blank">Go to Article</a>
        <hr width="20%" align="left">
        <h6>Article Comments</h6>
        {{#each comments}}
        <p>{{body}}</p>
        <small>{{createdDate}}</small>
        {{/each}}

        <form action="/api/{{_id}}/comment" method="POST">
            <div class="form-group">
                <input name="body" class="form-control"></input>
            </div>
            <button type="submit" class="btn btn-info">Submit Comment</button>
        </form>
        <hr>
        {{/each}}
    </div>
</div>
<script>

    $("#scraper-button").on("click", function () {
        $.get("/scrape", function (data) {
            location.reload();
        })

    })
</script>